{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": ".",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "src",
    "paths": {
      "@cmds/*": ["cmds/*"],
      "@gh/*": ["gh/*"],
      "@input/*": ["input/*"],
      "@tao/*": ["tao/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
